<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean class="com.jspider.springcorexml.onetomany.bean.FatherBean" name="father1">
		<property name="id" value="1"/>
		<property name="name" value="Ronaldo"/>
		<property name="children">		
			<list>
				<bean class="com.jspider.springcorexml.onetomany.bean.ChildBean" name="child1">
					<property name="id" value="1"/>
					<property name="name" value="ganya"/>
				</bean>
				<bean class="com.jspider.springcorexml.onetomany.bean.ChildBean" name="child2">
					<property name="id" value="2"/>
					<property name="name" value="pappya"/>
				</bean>
			</list>			
		</property>
			
	</bean>

</beans>